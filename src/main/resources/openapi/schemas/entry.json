{
  "description": "Configuration entry",
  "type": "object",
  "properties": {
    "id": {
      "description": "Identifier",
      "type": "string",
      "format": "uuid"
    },
    "scope": {
      "type": "string",
      "description": "Scope for this entry (normally a module)"
    },
    "key": {
      "type": "string",
      "description": "Key within scope for this configuration"
    },
    "value": {
      "type": "object",
      "description": "Configuration value"
    },
    "userId": {
      "type": "string",
      "format": "uuid",
      "description": "Owner of this configuration entry (optional)"
    }
  },
  "additionalProperties": false,
  "required": [
    "id", "scope", "key", "value"
  ]
}
