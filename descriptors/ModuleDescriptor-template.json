{
  "id": "${artifactId}-${version}",
  "name": "settings",
  "provides": [
    {
      "id": "_tenant",
      "version": "2.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/_/tenant"
        },
        {
          "methods": [
            "GET",
            "DELETE"
          ],
          "pathPattern": "/_/tenant/{id}"
        }
      ]
    },
    {
      "id": "settings",
      "version": "1.0",
      "handlers": [
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/settings/entries",
          "permissionsRequired": [
            "settings.entries.item.post"
          ],
          "permissionsDesired": [
            "settings.global.write.*",
            "settings.users.write.*",
            "settings.owner.write.*"
          ]
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/settings/entries",
          "permissionsRequired": [
            "settings.entries.collection.get"
          ],
          "permissionsDesired": [
            "settings.global.read.*",
            "settings.users.read.*",
            "settings.owner.read.*"
          ]
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/settings/entries/{id}",
          "permissionsRequired": [
            "settings.entries.item.get"
          ],
          "permissionsDesired": [
            "settings.global.read.*",
            "settings.users.read.*",
            "settings.owner.read.*"
          ]
        },
        {
          "methods": [
            "PUT"
          ],
          "pathPattern": "/settings/entries/{id}",
          "permissionsRequired": [
            "settings.entries.item.put"
          ],
          "permissionsDesired": [
            "settings.global.write.*",
            "settings.users.write.*",
            "settings.owner.write.*"
          ]
        },
        {
          "methods": [
            "DELETE"
          ],
          "pathPattern": "/settings/entries/{id}",
          "permissionsRequired": [
            "settings.entries.item.delete"
          ],
          "permissionsDesired": [
            "settings.global.write.*",
            "settings.users.write.*",
            "settings.owner.write.*"
          ]
        },
        {
          "methods": [
            "PUT"
          ],
          "pathPattern": "/settings/upload",
          "permissionsRequired": [
            "settings.entries.upload"
          ],
          "permissionsDesired": [
            "settings.global.write.*",
            "settings.users.write.*",
            "settings.owner.write.*"
          ]
        }
      ]
    }
  ],
  "requires": [],
  "permissionSets": [
    {
      "permissionName": "settings.entries.item.post",
      "displayName": "settings - create setting",
      "description": "Create setting"
    },
    {
      "permissionName": "settings.entries.collection.get",
      "displayName": "settings - get settings",
      "description": "Get settings"
    },
    {
      "permissionName": "settings.entries.item.get",
      "displayName": "settings - get setting",
      "description": "Get setting"
    },
    {
      "permissionName": "settings.entries.item.put",
      "displayName": "settings - update setting",
      "description": "Update setting"
    },
    {
      "permissionName": "settings.entries.item.delete",
      "displayName": "settings - delete setting",
      "description": "Delete setting"
    },
    {
      "permissionName": "settings.entries.upload",
      "displayName": "settings - upload",
      "description": "Upload settings"
    },
    {
      "permissionName": "settings.entries.all",
      "displayName": "settings - all setting permissions",
      "description": "All setting permissions",
      "subPermissions": [
        "settings.entries.item.post",
        "settings.entries.collection.get",
        "settings.entries.item.get",
        "settings.entries.item.put",
        "settings.entries.item.delete",
        "settings.entries.upload"
      ]
    }
  ],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 2147483648,
        "PortBindings": {
          "8081/tcp": [
            {
              "HostPort": "%p"
            }
          ]
        }
      }
    },
    "env": [
      {
        "name": "JAVA_OPTIONS",
        "value": "-XX:MaxRAMPercentage=66.0"
      },
      {
        "name": "DB_HOST",
        "value": "postgres"
      },
      {
        "name": "DB_PORT",
        "value": "5432"
      },
      {
        "name": "DB_USERNAME",
        "value": "folio_admin"
      },
      {
        "name": "DB_PASSWORD",
        "value": "folio_admin"
      },
      {
        "name": "DB_DATABASE",
        "value": "okapi_modules"
      },
      {
        "name": "DB_MAXPOOLSIZE",
        "value": "5"
      }
    ]
  }
}
